{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "noEmit": true,
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "types": ["node"], // Add types for Node.js and Jest
    "moduleResolution": "nodenext", // Ensure module resolution is set to node
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "api/**/*.ts",
    "requests/**/*.ts"
  ], // Include source and test files
  "exclude": ["node_modules"] // Exclude node_modules
}
